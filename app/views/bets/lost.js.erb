<% if @bet.finished? %>
	$(".wager-links").hide();
	$("#user_nav").replaceWith("<%= escape_javascript(render 'shared/login') %>")
	$(".winner").html("Winner : <%= escape_javascript(link_to @bet.winner.display_name, publicprofile_path(@bet.winner), :remote => true) %>");
	$(".bet-panel .bet-status-image").html("<%= escape_javascript(image_tag @bet.validity_status.downcase + '.png', :size => '90x90') %>");
	$(".bet-display-name").effect("highlight", {}, 3000);
<% end %>