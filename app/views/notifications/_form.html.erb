<%= semantic_form_for @notification do |f| %>
  <%= error_div_for @notification %>
  <%= error_messages_for(@notification)  %>
  <%= f.inputs do %>
	<%= f.input :title, :input_html => { :placeholder => "e.g You won a new award" } %>
	<%= f.input :message, :input_html => { :rows => 10, :cols => 10, :maxlength => 500, :placeholder => "e.g You won an award to betting correctly against over more than 20 people, with no one betting with you" } %>
	<%= f.input :user_id, :collection => User.all, :include_blank => false  %>
	<%= f.input :viewed %>
	<%= f.input :closed %>	
  <% end %>	
  <%= f.buttons %>
<% end %>