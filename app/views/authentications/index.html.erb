<% title "SignIn methods" %>  
<% if @authentications %>  
 <% unless @authentications.empty? %>  
  <p><strong>You have added the following SignIn methods to your account:</strong></p>  
   <div class="authentications">  
    <% for authentication in @authentications %>  
     <div class="authentication">  
      <%= image_tag "png/#{authentication.provider}_32.png", :size => "32x32" %>  
      <div class="provider"><%= authentication.provider.titleize %></div>  
      <div class="uid"><%= truncate(authentication.uid, :length => 25) %></div>  
       <%= link_to "X", authentication, :confirm => 
      'Are you sure you want to remove this authentication
      option?', :method => :delete, :class => "remove" %>  
     </div>  
     <% end %>  
     <div class="clear"></div>  
    </div>  
   <% end %>  
   <p><strong>Add another service to sign in with:</strong></p>  
  <% else %>  
  <p><strong>Sign in through one of these services:</strong></p>  
<% end %>  
  
<span class="auth_provider disabled">
  <%= image_tag "png/twitter_64.png", :size => "64x64",
  :alt => "Twitter" %>Twitter</span>  
<a href=<%= user_omniauth_authorize_path(:facebook) %> class="auth_provider">  
  <%= image_tag "png/facebook_64.png", :size => "64x64", 
  :alt => "Facebook" %>Facebook<br />(Recommended)</a>  
<a href="/auth/google_apps" class="auth_provider">  
  <%= image_tag "png/google_64.png", :size => "64x64", 
  :alt => "Google" %>Google</a>
<span class="auth_provider disabled">
  <%= image_tag "png/openid_64.png", :size => "64x64", 
  :alt => "OpenID" %>OpenID</span>
<div class="clear"></div>
<div class="clear"></div>